{
  "name": "service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/service/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "generateSchemas": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/src/types/schemas/**/*"],
      "outputs": ["{projectRoot}/src/consts/schemas.ts"],
      "cache": true,
      "options": {
        "cwd": "{projectRoot}",
        "command": "node ./scripts/generateSchemas.js",
        "parallel": false
      }
    },
    "build": {
      "dependsOn": ["^build", "generateSchemas"],
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "target": "node18",
        "outputPath": "{projectRoot}/dist",
        "format": ["cjs"],
        "bundle": true,
        "deleteOutputPath": true,
        "main": "{projectRoot}/src/app.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "generatePackageJson": false,
        "external": ["sodium-native"],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        },
        "assets": [
          {
            "glob": "**/*",
            "input": "{projectRoot}/public",
            "output": "public"
          }
        ]
      },
      "configurations": {
        "development": {
          "esbuildOptions": {
            "outExtension": {
              ".js": ".js"
            }
          },
          "assets": [
            {
              "glob": "**/*",
              "input": "{projectRoot}/public",
              "output": "public"
            },
            {
              "glob": "**/*",
              "input": "{projectRoot}/src/local-certs",
              "output": "local-certs"
            }
          ]
        },
        "production": {
          "thirdParty": true,
          "minify": true
        },
        "vercel": {
          "outputPath": "{projectRoot}/api",
          "main": "{projectRoot}/vercel/serverless.ts",
          "thirdParty": true,
          "minify": true,
          "assets": []
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "service:build",
        "runBuildTargetDependencies": true,
        "buildTargetOptions": {
          "progress": true
        },
        "args": ["--listen"],
        "debounce": 1000
      },
      "configurations": {
        "development": {
          "buildTarget": "service:build:development"
        },
        "production": {
          "buildTarget": "service:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,js,json}"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "cache": false,
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "runInBand": true
      }
    }
  }
}
