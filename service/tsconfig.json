{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "lib": ["es2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["./tests/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "typings/**/*.ts", "tests/**/*.ts", "scripts/**/*.ts"]
}
