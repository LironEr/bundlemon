{
  "name": "bundlemon",
  "version": "2.0.2",
  "description": "Monitor your bundle size",
  "keywords": [
    "bundle",
    "size",
    "bundlesize",
    "monitor"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "author": "Liron Er",
  "funding": "https://github.com/sponsors/LironEr",
  "license": "MIT",
  "homepage": "https://github.com/LironEr/bundlemon.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/LironEr/bundlemon.git"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "bin": {
    "bundlemon": "bin/bundlemon.js"
  },
  "scripts": {
    "test": "jest",
    "build": "rimraf lib/ && tsc -p tsconfig.release.json",
    "prepublishOnly": "yarn test && yarn lint && yarn build",
    "lint": "yarn eslint --config ../../.eslintrc.json --max-warnings=0 \"src/**/*.ts\" \"bin/**/*.js\"",
    "lint:fix": "yarn lint --fix",
    "type-check": "tsc --noEmit",
    "bundlemon": "bundlemon"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "axios-retry": "^3.3.1",
    "brotli-size": "^4.0.0",
    "bundlemon-utils": "^1.2.0",
    "bytes": "^3.1.2",
    "chalk": "^4.0.0",
    "commander": "^9.4.0",
    "cosmiconfig": "^7.0.1",
    "gzip-size": "^6.0.0",
    "micromatch": "^4.0.5",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.1",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^14.0.0",
    "rimraf": "^3.0.2"
  },
  "files": [
    "bin",
    "lib"
  ]
