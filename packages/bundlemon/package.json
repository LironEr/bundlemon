{
  "name": "bundlemon",
  "version": "0.4.0-rc.1",
  "description": "Monitor your bundle size",
  "keywords": [
    "bundle",
    "size",
    "bundlesize",
    "monitor"
  ],
  "engines": {
    "node": ">=10"
  },
  "author": "Liron Er",
  "license": "MIT",
  "homepage": "https://github.com/LironEr/bundlemon.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/LironEr/bundlemon.git"
  },
  "main": "lib/main/index.js",
  "types": "lib/main/index.d.ts",
  "bin": {
    "bundlemon": "bin/bundlemon.js"
  },
  "scripts": {
    "test": "jest",
    "build": "rimraf lib/ && tsc -p tsconfig.release.json",
    "prepublishOnly": "yarn test && yarn lint && yarn build",
    "lint": "yarn eslint --config ../../.eslintrc.json --max-warnings=0 \"src/**/*.ts\" \"bin/**/*.js\"",
    "lint:fix": "yarn lint --fix",
    "type-check": "tsc --noEmit",
    "bundlemon": "bundlemon"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bundlemon-utils": "^0.3.0-rc.1",
    "bytes": "^3.1.0",
    "chalk": "^4.1.1",
    "commander": "^6.1.0",
    "cosmiconfig": "^6.0.0",
    "gzip-size": "^5.1.1",
    "micromatch": "^4.0.2",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^10.0.0",
    "@types/yup": "^0.29.3",
    "rimraf": "^3.0.2"
  },
  "files": [
    "bin",
    "lib"
  ]
