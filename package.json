    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "~5.0.0"
  },
  "engines": {
    "yarn": "^1.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ]
