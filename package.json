    "@nx/js": "18.3.3",
    "@nx/react": "^18.3.3",
    "@nx/vite": "18.3.3",
    "@nx/web": "18.3.3",
    "@types/jest": "^29.5.1",
    "@types/jest-when": "^3.5.2",
    "@types/node": "18.16.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitejs/plugin-react": "^4.2.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
