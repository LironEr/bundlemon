{
  "private": true,
  "license": "MIT",
  "scripts": {
    "test-packages": "jest",
    "build-packages": "lerna run build --stream",
    "lint-packages": "lerna run lint --stream --parallel",
    "lint-fix-packages": "lerna run lint:fix --stream --parallel",
    "type-check-packages": "lerna run type-check --stream",
    "start:service": "docker-compose -f docker-compose.dev.yml up --build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jest-when": "^3.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-when": "^3.5.2",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "yarn": "^1.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "website",
    "service",
    "examples/*"
  ]
}
