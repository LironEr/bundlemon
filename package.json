{
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build-packages": "lerna run build --stream",
    "lint-packages": "lerna run lint --stream --parallel",
    "lint-fix-packages": "lerna run lint:fix --stream --parallel",
    "type-check-packages": "lerna run type-check --stream",
    "start:service": "docker-compose -f docker-compose.dev.yml up --build"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/jest-when": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-when": "^3.3.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  },
  "engines": {
    "yarn": "^1.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*",
    "website",
    "service",
    "examples/*"
  ]
}
